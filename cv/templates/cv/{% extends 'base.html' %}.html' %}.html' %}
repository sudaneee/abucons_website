                        {{ formset.management_form }}
                        
                        {% for form in formset.forms %}
                            <div class="border p-3 mb-3 {{ name }}-form">
                                <div class="row">
                                    {% for field in form.visible_fields %}
                                        <div class="col-md-6 mb-3">
                                            {{ field.label_tag }}
                                            {{ field }}
