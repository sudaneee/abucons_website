<script>
// JavaScript for dynamic form addition (keep your existing script or add this)
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.add-form').forEach(button => {
        button.addEventListener('click', function() {
            const prefix = this.dataset.prefix;
            const formContainer = document.getElementById(`${prefix}Forms`);
            const totalForms = document.getElementById(`id_${prefix}-TOTAL_FORMS`);
            const emptyForm = document.getElementById(`empty-${prefix}-form`).innerHTML;
            
            const newForm = document.createElement('div');
            newForm.innerHTML = emptyForm.replace(/__prefix__/g, totalForms.value);
            formContainer.insertBefore(newForm, this);
            
            totalForms.value = parseInt(totalForms.value) + 1;
        });
    });
});
</script>
